{
  "name": "locapoc",
  "version": "0.1.3",
  "description": "Proof of concept for a local app",
  "type": "module",
  "main": "src/myrest.ts",
  "bin": {
    "locapoc": "dist/bin/bincli.cjs"
  },
  "files": [
    "dist/bin/webui/"
  ],
  "scripts": {
    "doc:swagger:json": "swagger-jsdoc -d src/swaggerDefinition.cjs src/*.ts",
    "doc:swagger:ui": "node docs/swagger_ui.js",
    "build": "tsc --build src/tsconfig.json",
    "run": "node build/locapoc.js --port 2022 --directory ./webui",
    "run_for_swagger": "node build/locapoc.js --port 2022 --directory ./webui -c -b0",
    "test_simple": "./tests/simple_requests.sh",
    "test_quit": "./tests/quit_request.sh",
    "test": "run-s test_simple test_quit",
    "lint": "eslint .",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "dist:build": "tsc --build src/tsconfig.dist.json",
    "dist:bundle": "esbuild dist/build/locapoc.js --bundle --platform=node --outfile=dist/bundle/locapoc.cjs",
    "run_dist": "node dist/bundle/locapoc.cjs --port 2022 --directory ./webui",
    "make_bin": "scr/make_bincli.sh",
    "zip_package": "scr/make_zip.sh",
    "run_package": "dist/locapoc_v*/linux_runs_locapoc.sh",
    "make_all": "run-s build lint prettier:check dist:build dist:bundle make_bin zip_package",
    "full_loop": "run-s clean make_all run_package",
    "prepublish": "run-s clean make_all",
    "clean": "shx rm -fr build dist swagger.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlyoleg/locapoc.git"
  },
  "keywords": [
    "poc",
    "proof of concept",
    "local app",
    "web ui",
    "rest api",
    "static content",
    "standalone"
  ],
  "author": "charlyoleg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlyoleg/locapoc/issues"
  },
  "homepage": "https://github.com/charlyoleg/locapoc#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.16",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.18.2",
    "get-port": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "open": "^8.4.0",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "typescript": "^4.8.3",
    "yargs": "^17.6.0"
  }
}
